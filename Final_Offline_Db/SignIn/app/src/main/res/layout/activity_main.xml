<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/LogIn"
        android:id="@+id/logintxt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="E-Mail"
        android:id="@+id/emailtxt"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/logintxt"
        android:layout_alignRight="@+id/logintxt"
        android:layout_alignEnd="@+id/logintxt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/usrmnth"
        android:width="200dp"
        android:layout_alignTop="@+id/emailtxt"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Password"
        android:id="@+id/pwdtxt"
        android:layout_below="@+id/usrmnth"
        android:layout_alignLeft="@+id/emailtxt"
        android:layout_alignStart="@+id/emailtxt"
        android:layout_marginTop="50dp"
        android:layout_marginRight="40dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:width="200dp"
        android:layout_alignTop="@+id/pwdtxt"
        android:layout_toRightOf="@+id/pwdtxt"
        android:layout_toEndOf="@+id/pwdtxt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:id="@+id/signinbtn"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="OnSignIn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signupbtn"
        android:layout_below="@+id/signinbtn"
        android:layout_alignLeft="@+id/signinbtn"
        android:layout_alignStart="@+id/signinbtn"
        android:layout_marginTop="30dp"
        android:onClick="OnSignUp"/>

</RelativeLayout>
